<style>
  main.main-contacte {
    margin: auto;
    background-color: #683703;
    padding: 40px 15%;
  }
  .intro-contacte {
    background-color: #683703;
    ;
    border-radius: 20px;
    padding: 20px;
    margin-bottom: 40px;
    color: white;
  }
  .contact-section {
    background-color: #683703;
    border-radius: 20px;
    padding: 20px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    align-content: center;
    justify-content: center;
    justify-items: center;
  }
  .contact-item {
    padding: 60px;
    justify-self: center;
    align-self: center;
    color: white;
  }
  .contact-item a {
    text-decoration: none;
    color: white;
  }
  .social-links {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .social-links a {
    padding: 10px 0px;
  }

  @media (max-width: 768px) {
    main.main-contacte {
      padding: 40px 5%;
    }
    .contact-section {
      grid-template-columns: 1fr;
    }

  }

</style>
