    estat: "Restaurat",
  },
];
---

<MainLayout>
  <main class="main-violins">
    <div class="violin-grid">
      {
        violins.map((violin) => (
          <Violi
            nom={violin.nom}
            fabricacio={violin.fabricacio}
            descripcio={violin.descripcio}
            imatge={violin.imatge}
            estat={violin.estat}
          />
        ))
      }
    </div>
  </main>
</MainLayout>

<style>
  main.main-violins {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: auto;
    background-color: #a87c4f;
    padding: 40px 15%;
  }

  .violin-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    main.main-violins {
      padding: 40px 5%;
    }

    .violin-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
